#3dof model parameters
xg0=-1.5 #gravity center in x
yg0=0 #gravity center in y
m0=3000 #mass in kg
ma_xu0=0 #added mass matrix(0,0)
ma_yv0=0 #added mass matrix(1,1)
ma_yr0=0 #added mass matrix(1,2)
ma_nv0=0 #added mass matrix(2,1)
ma_nr0=0 #added mass matrix(2,2)

dl_xu0=100 #linear drag matrix(0,0)
dl_yv0=200 #linear drag matrix(1,1)
dl_yr0=0 #linear drag matrix(1,2)
dl_nv0=0 #linear drag matrix(2,1)
dl_nr0=0 #linear drag matrix(2,2)

dq_xu0=50 #quadratic drag matrix(0,0)
dq_yv0=100 #quadratic drag matrix(1,1)
dq_yr0=0 #quadratic drag matrix(1,2)
dq_nv0=0 #quadratic drag matrix(2,1)
dq_nr0=100 #quadratic drag matrix(2,2)

