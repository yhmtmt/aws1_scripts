#rudder control model
rslack=3 #Rudder slack (port positive)
rrud=0.2 #Speed of rudder rotatin (rate per sec, 0.2 means 5sec for full swing)
ruds=-30 # Hard a starboard (degree)
rudp=30  # Hard a port (port)

#engine control model
fth=152 # Nutral to Forward threshold
bth=102 # Nutral to Backward threshold
umax=255 # maximum control input
umin=0 # minimum control input
rgamma=0.5 # speed for gear lever (rate per sec)
rfdelta=0.5 # speed for throttle lever (rate per sec)
rbdelta=0.5 # speed for throttle lever (rate per sec) 
fslack=0.05 # slack of throttle lever in forward gear (rate)
bslack=0.05 # slack of throttle lever in backward gear (rate)

#outboard mortor's force model parameters
xr0=-3.2 # rudder x position relative to the center of boat
yr0=0.0 # rudder y position relative to the center of boat
CTL0=0.4 # Linear Thrust force coefficient
CTQ0=0.0002 # Quadratic Thrust force coefficient
CD0=0 # Drag coefficient of rudder
CL0=100 # Lift coefficient of rudder

#outboard mortor's force model planing parameters
xr1=-3.2 # rudder x position relative to the center of boat
yr1=0.0 # rudder y position relative to the center of boat
CTL1=0.4 # Linear Thrust force coefficient
CTQ1=0.0002 # Quadratic Thrust force coefficient
CD1=0 # Drag coefficient of rudder
CL1=0 # Lift coefficient of rudder

